{
  "name": "client",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "dev:server": "nodemon --watch ssr/server.ts --exec ts-node --transpile-only ssr/server.ts",
    "dev:client": "yarn build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/ssr",
    "preview": "vite preview",
    "test": "jest",
    "copy-files": "copyfiles index.html dist"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "rimraf": "^5.0.1",
    "shared-entities-module": "../shared",
    "ts-node": "^10.9.1",
    "vite-plugin-ssr": "^0.4.131"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@swc/core": "^1.3.64",
    "@swc/jest": "^0.2.26",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "camelcase": "6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "typescript": "^5.1.3",
    "vite": "^4.2.0",
    "vite-plugin-css-modules": "^0.0.1"
  }
}
